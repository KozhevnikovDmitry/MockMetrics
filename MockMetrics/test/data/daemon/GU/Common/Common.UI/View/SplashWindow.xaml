<Window x:Class="Common.UI.View.SplashWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" Height="185" Width="640"
        ShowInTaskbar="False" WindowState="Normal" WindowStyle="None" WindowStartupLocation="CenterScreen"
        BorderThickness="0" BorderBrush="Transparent" AllowsTransparency="True" >
    <Window.Background>
        <ImageBrush ImageSource="/GU.UI;component/Resources/Pictures/splash.png"></ImageBrush>
    </Window.Background>
    <TextBlock Text="{Binding ApplicationName}" 
               HorizontalAlignment="Left" 
               VerticalAlignment="Center"
               Foreground="White"
               FontSize="14"
               Margin="5"/>

</Window>
