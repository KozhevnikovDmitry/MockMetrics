<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:i="clr-namespace:System.Windows.Interactivity;assembly=System.Windows.Interactivity"
                    xmlns:Properties="clr-namespace:Common.UI.ViewModel.Attachables.Properties">
    <Style TargetType="UserControl" x:Key="validateableView">
        <Setter Property="Properties:StylizedTriggers.EventTriggers">
            <Setter.Value>
                <Properties:StylizedTriggerCollection>
                    <i:EventTrigger EventName="Loaded">
                        <i:InvokeCommandAction Command="{Binding ReadyToValidateCommand}"/>
                    </i:EventTrigger>
                </Properties:StylizedTriggerCollection>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>