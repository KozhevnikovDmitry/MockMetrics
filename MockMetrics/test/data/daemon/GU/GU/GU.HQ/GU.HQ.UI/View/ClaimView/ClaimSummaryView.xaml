<UserControl x:Class="GU.HQ.UI.View.ClaimView.ClaimSummaryView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:DeclarerView="clr-namespace:GU.HQ.UI.View.DeclarerView"
             xmlns:ClaimView1="clr-namespace:GU.HQ.UI.View.ClaimView" mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="800">
    <StackPanel>
        <GroupBox Header="Заявка">
            <ClaimView1:ClaimSummaryShortView DataContext="{Binding ClaimSummaryShortVm}"/>
        </GroupBox>

        <Line Height="10"/>

        <GroupBox Header="Заявитель">
            <DeclarerView:DeclarerShortView DataContext="{Binding DeclarerShortVm}"/>
        </GroupBox>
    </StackPanel>
</UserControl>
